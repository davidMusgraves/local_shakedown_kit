&GLOBAL
  PROJECT as40se60_melt
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  GTH_POTENTIALS

    &MGRID
      CUTOFF 600
      REL_CUTOFF 80
    &END MGRID

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3
    &END QS

    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 5.0E-7
      MAX_SCF 160
      LEVEL_SHIFT 0.30

      &OT
        PRECONDITIONER FULL_ALL
        MINIMIZER DIIS
        ENERGY_GAP 0.001
      &END OT

      &OUTER_SCF
        EPS_SCF 2.0E-7
        MAX_SCF 12
      &END OUTER_SCF
      ! no SMEAR section here on purpose
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF 16
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC 14.0816 14.0816 14.0816
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE inputs/as40se60_100_seed.xyz
    &END TOPOLOGY
    &KIND As
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND Se
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 2000
    TIMESTEP 0.25
    TEMPERATURE 1500
    COMVEL_TOL 0.01
    &THERMOSTAT
      TYPE CSVR
      REGION MASSIVE
      &CSVR
        TIMECON 25.0
      &END CSVR
    &END THERMOSTAT
  &END MD

  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      FILENAME as40se60_melt-pos-1.xyz
      &EACH
        MD 20
      &END EACH
    &END TRAJECTORY
    &VELOCITIES
      FILENAME as40se60_melt-vel-1.xyz
      &EACH
        MD 20
      &END EACH
    &END VELOCITIES
    &RESTART
      BACKUP_COPIES 0
    &END RESTART
  &END PRINT
&END MOTION
