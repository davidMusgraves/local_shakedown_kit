&GLOBAL
  PROJECT as40se60_phase1
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS

    &MGRID
      CUTOFF 600
      REL_CUTOFF 80
    &END MGRID

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 1
    &END QS

    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 200
      ADDED_MOS 80

      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE [K] 500
      &END SMEAR

      &DIAGONALIZATION
      &END DIAGONALIZATION

      &MIXING T
        METHOD BROYDEN_MIXING
        ALPHA 0.30
      &END MIXING

      &PRINT
        &RESTART ON
          FILENAME as40se60_phase1.restart
          BACKUP_COPIES 0
          &EACH
            MD 0     ! write once at end of phase-1
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF 16
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC 14.0816 14.0816 14.0816
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE inputs/as40se60_100_seed.xyz
    &END TOPOLOGY
    &KIND As
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND Se
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVT
    TIMESTEP 0.05
    STEPS 20000                 ! ~1 ps clamp/settle
    TEMPERATURE 1500
    COMVEL_TOL 1.0E-4
    &THERMOSTAT
      TYPE CSVR
      REGION MASSIVE
      &CSVR
        TIMECON 5.0
      &END CSVR
    &END THERMOSTAT
  &END MD

  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      FILENAME as40se60_phase1-pos.xyz
      &EACH
        MD 100
      &END EACH
    &END TRAJECTORY
    &VELOCITIES
      FILENAME as40se60_phase1-vel.xyz
      &EACH
        MD 100
      &END EACH
    &END VELOCITIES
    &RESTART
      BACKUP_COPIES 0
      FILENAME as40se60_phase1.restart
      &EACH
        MD 100
      &END EACH
    &END RESTART
    &RESTART_HISTORY OFF
    &END RESTART_HISTORY
  &END PRINT
&END MOTION
