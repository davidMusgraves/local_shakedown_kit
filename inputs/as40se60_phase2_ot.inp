&GLOBAL
  PROJECT as40se60_phase2
  RUN_TYPE MD
  PRINT_LEVEL LOW
  &EXT_RESTART
    RESTART_FILE_NAME as40se60_phase1.restart
    RESTART_DEFAULT T           ! pull in density/MOs/velocities if present
  &END EXT_RESTART
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS

    &MGRID
      CUTOFF 600
      REL_CUTOFF 80
    &END MGRID

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 1
    &END QS

    &SCF
      SCF_GUESS RESTART        ! use the density/MOs from EXT_RESTART
      EPS_SCF 5.0E-7
      MAX_SCF 160
      LEVEL_SHIFT 0.30

      &OT
        PRECONDITIONER FULL_KINETIC
        MINIMIZER DIIS
        ENERGY_GAP 0.005
      &END OT

      &OUTER_SCF
        EPS_SCF 2.0E-7
        MAX_SCF 10
      &END OUTER_SCF
      ! No ADDED_MOS and no SMEAR with OT
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF 16
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC 14.0816 14.0816 14.0816
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE inputs/as40se60_100_seed.xyz
    &END TOPOLOGY
    &KIND As
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND Se
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVT
    TIMESTEP 0.10
    STEPS 100000               ! 10 ps
    TEMPERATURE 1500
    COMVEL_TOL 1.0E-4
    &THERMOSTAT
      TYPE CSVR
      REGION MASSIVE
      &CSVR
        TIMECON 30.0
      &END CSVR
    &END THERMOSTAT
  &END MD

  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      FILENAME as40se60_phase2-pos.xyz
      &EACH
        MD 200
      &END EACH
    &END TRAJECTORY
    &VELOCITIES
      FILENAME as40se60_phase2-vel.xyz
      &EACH
        MD 200
      &END EACH
    &RESTART
      BACKUP_COPIES 0
      FILENAME as40se60_phase2.restart
      &EACH
        MD 200
      &END EACH
    &END RESTART
    &RESTART_HISTORY OFF
    &END RESTART_HISTORY
  &END PRINT
&END MOTION
